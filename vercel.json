{
  "version": 2,
  "functions": {
    "api/*": {
      "memory": 512,
      "maxDuration": 10,
      "runtime": "vercel-node@0.29.0",
      "includeFiles": "backend/server.js"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
